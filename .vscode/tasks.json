{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "SCons Build",
            "command": "scons",
            "type": "shell",
            "args": [
                "platform=windows"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Run Game Project",
            "command": "godot",
